doctype html
html(lang='en')
    include ../head.pug
        title= 'Eesti Segakooride Liit - Kontakt'
    body
        include ../navigation.pug

        h4 #[strong= self.title]
        each rida, id in self.kontakt
            p #[strong= rida.label]: 
                if rida.email
                    a(href= 'mailto:' + rida.email)= rida.email
                else
                    span= rida.sisu

        


        include ../footer.pug
