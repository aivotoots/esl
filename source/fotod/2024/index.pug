extends ../../_templates/layout.pug

block peasisu

    if self.subtitle
        h4= self.subtitle
    if self.download 
        a(href=self.download)
            span Lae alla .zip
    if self.autor
        br
        br
        span Fotode autor: #{self.autor}
    ul.fotod-grid
        each foto, id in self.fotod
            li.fotod-foto
                a(href= "/gallery" + self.directory + "/" + foto.file, data-lightbox=self.directory)
                    img(src= "/gallery" + self.directory + "/thumbs/thumbs_" + foto.file)