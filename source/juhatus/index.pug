extends ../_templates/layout.pug

block peasisu

    section.juhatus
        ul
            each liige, id in self.juhatus
                li
                    table.juhatus-liige-tabel
                        tr.juhatus-liige
                            td.juhatus-liige-nimi
                                span #[strong= liige.nimi]
                        if liige.pilt
                            tr
                                td.juhatus-pilt
                                    if liige.pilt.landscape
                                        img(src= liige.pilt.url, height="200px")
                                    else
                                        img(src= liige.pilt.url, width="200px")
                        if liige.amet
                            tr
                                td
                                    span= liige.amet
                        if liige.telefon
                            tr
                                td
                                    span= liige.telefon
                        tr
                            td
                                if liige.email
                                    each e, id in liige.email
                                        a(href= 'mailto:' + e)= e
                                        br
                    br